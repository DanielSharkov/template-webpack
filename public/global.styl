html, body
	position relative
	width 100vw
	height 100vh
	margin 0
	padding 0
	box-sizing border-box

body
	color #333
	line-height 1.5
	font-family:
		-apple-system,
		BlinkMacSystemFont,
		'Segoe UI',
		Roboto,
		Oxygen-Sans,
		Ubuntu,
		Cantarell,
		'Helvetica Neue',
		sans-serif


div, input, button, textarea, svg, svg *,
span, a, p, q, b, i, label, section,
h1, h2, h3, h4, h5, h6
	background none
	border none
	outline none
	box-sizing border-box
	transition all cubic-bezier(.22,.61,.36,1) 200ms

span, a, q, p, i, b, label,
input, textarea, button
	font-size 1rem

a
	color #06F
	text-decoration none
	&:hover
		text-decoration underline
	&:visited
		color #04B

label
	display block

input, button, select, textarea
	font-family inherit
	font-size inherit
	padding .4em
	margin 0 0 .5em 0
	box-sizing border-box
	border 1px solid #ccc
	border-radius 4px

input
	&:disabled
		color #ccc
	&[type="range"]
		height 0

button
	background-color #f4f4f4
	outline none
	cursor pointer
	&:active
		background-color #ddd
	&:focus
		border-color #666
	&[disabled]
		opacity .5
		pointer-events none
